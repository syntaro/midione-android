<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Theme.MidiOne.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="myButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/color_push</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#0000FF</item>
        <item name="colorControlActivated">#FF0000</item>
    </style>

    <style name="Widget.Theme.MidiOne.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MidiOne.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="textViewMessageBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>


    <style name="BaseToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="backgroundColor">@color/color_head2</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundColor">@color/color_head2</item>
        <item name="android:textColorSecondary">@color/light_blue_900</item>
    </style>

</resources>
